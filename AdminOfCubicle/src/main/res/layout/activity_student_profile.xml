<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfileActivity">
    <include
        android:id="@+id/student_profile_toolbar"
        layout="@layout/bar_layout"/>
    <RelativeLayout
        android:layout_marginTop="20sp"
        android:layout_below="@id/student_profile_toolbar"
        android:id="@+id/first_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/profile_image"
            android:layout_width="250sp"
            android:id="@+id/student_image"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_height="250dp"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_below="@id/student_image"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:text="Name"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:id="@+id/student_name"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_marginTop="10sp"
            android:layout_below="@id/student_name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:text="Batch"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="italic"
            android:id="@+id/student_batch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:text="Name"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textSize="20sp"
            android:id="@+id/student_department"
            android:layout_below="@+id/student_batch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_below="@id/student_department"
            android:id="@+id/student_university"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:text="University"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:id="@+id/layout"
        android:layout_below="@id/first_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/messageBtn"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Message"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_width="120sp"
            android:layout_height="35dp"/>
        <Button
            android:visibility="gone"
            android:id="@+id/MemeberBtn"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Member"
            android:layout_marginLeft="5dp"
            android:layout_width="120sp"
            android:layout_height="35dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/second_cardview"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:hint="Name"
            android:id="@+id/student_name_2"
            android:padding="10dp"
            android:drawableLeft="@drawable/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="2dp"
        android:id="@+id/studentID_cardview"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/second_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:hint="ID"
            android:id="@+id/StudentID"
            android:padding="10dp"
            android:drawableLeft="@drawable/student_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/studentID_cardview"
        android:id="@+id/third_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:autoLink="phone"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/student_number"
            android:hint="Phone number"
            android:drawableLeft="@drawable/call"
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/third_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:hint="Email"
            android:padding="10sp"
            android:id="@+id/student_email"
            android:autoLink="email"
            android:drawableLeft="@drawable/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>