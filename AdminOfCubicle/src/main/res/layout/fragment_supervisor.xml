<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/colorPrimary"
    tools:context=".Fragment.FramgeOfDevelopers.SupervisorFragment">

   <ImageView
       android:id="@+id/supervior1"
       android:src="@drawable/supervisor"
       android:layout_marginTop="10sp"
       android:layout_centerHorizontal="true"
       android:layout_width="250sp"
       android:layout_height="250dp"/>
    <TextView
        android:textColor="@android:color/black"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/supervior2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/supervior1"
        android:text="Rumel M. S. Rahman Pir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@android:color/black"
        android:layout_marginTop="3sp"
        android:id="@+id/supervior3"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/supervior2"
        android:text="Associate Professor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@android:color/black"
        android:layout_marginTop="3sp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/supervior3"
        android:text="Computer Science and Engineering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>