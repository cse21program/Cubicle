<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_marginTop="5sp"
    android:layout_marginLeft="10sp"
    android:background="@drawable/receiver_message_backgroud"
    android:layout_alignParentLeft="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:padding="10sp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/receiverMessage"
        android:text="Receiver Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:padding="5sp"
        android:textSize="12dp"
        android:text="9:57 pm 9 may 2020"
        android:id="@+id/receiverMessageTimeAndTime"
        android:layout_below="@id/receiverMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     />

</RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/sender_message_backgroud"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10sp"
            android:padding="10sp"
            android:id="@+id/senderMessage"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:text="Sender Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/senderMessage"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:padding="5sp"
            android:text="10:04 pm 9 may 2020"
            android:id="@+id/senderMessageTimeAndTime"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:layout_height="wrap_content"
           />

    </RelativeLayout>
</RelativeLayout>