<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentOfProfile.AboutFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/MissionView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="Mission:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/mission"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_horizontal"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_below="@id/MissionView"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/MissionView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Give basic idea of computer .programming and many more Represent our university and department throuhout the whole country with the help of computer related events or program         "
            android:id="@+id/profile_mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/call_card_view"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/MissionView2"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:text="+8801729358489"
            android:id="@+id/profile_phone"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/call"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_horizontal" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/email_card_view"
        android:layout_below="@id/call_card_view"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:id="@+id/profile_email"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="cubicle@gmail.com"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/email"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_horizontal" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Web_card_view"
        android:layout_below="@id/email_card_view"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profile_website"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="http://lucomputer.org//"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/webbsite"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:visibility="gone"
            android:gravity="center_horizontal" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Founed_card_view_1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_below="@id/email_card_view"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="Founded:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/founded"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_horizontal"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Founed_card_view_2"
        android:layout_below="@id/Founed_card_view_1"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profile_founded"
            android:textAlignment="center"
            android:text="9th February 2013"
           android:textSize="20sp"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_horizontal" />

    </androidx.cardview.widget.CardView>



</RelativeLayout>