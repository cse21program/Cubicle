<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SettingActivity">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/bar_layout"/>
    <ScrollView
        android:layout_below="@id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_below="@id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/profile_image"
                android:layout_width="250sp"
                android:id="@+id/profile_image"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_height="250dp"/>

            <EditText
                android:lines="1"
                android:textColorHint="@android:color/black"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:background="@drawable/inputs"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/profile_image"
                android:hint="Name"
                android:id="@+id/profile_name"
                android:padding="10dp"
                android:drawableLeft="@drawable/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:lines="1"
                android:textColorHint="@android:color/black"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:background="@drawable/inputs"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:layout_below="@id/profile_name"
                android:hint="Student ID"
                android:id="@+id/Student_Id"
                android:padding="10dp"
                android:drawableLeft="@drawable/student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:lines="1"
                android:textColorHint="@android:color/black"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:background="@drawable/inputs"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:id="@+id/batch_name"
                android:layout_below="@id/Student_Id"
                android:hint="Batch"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/batch"
                android:padding="10sp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




            <EditText
                android:lines="1"
                android:textColorHint="@android:color/black"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:background="@drawable/inputs"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:id="@+id/department_name"
                android:hint="Department"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/department"
                android:padding="10sp"
                android:layout_below="@id/batch_name"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:lines="1"
                android:textColorHint="@android:color/black"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:background="@drawable/inputs"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:id="@+id/university_name"
                android:hint="University"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/university"
                android:padding="10sp"
                android:layout_below="@id/department_name"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColorHint="@android:color/black"
                android:inputType="phone"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:background="@drawable/inputs"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:id="@+id/phone_number"
                android:hint="Phone number"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/call"
                android:padding="10sp"
                android:layout_below="@id/university_name"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textColorHint="@android:color/black"
                android:lines="1"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:background="@drawable/inputs"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_below="@id/phone_number"
                android:hint="Email"
                android:layout_marginTop="10dp"
                android:padding="10sp"
                android:inputType="textEmailAddress"
                android:id="@+id/email_ID"
                android:drawableLeft="@drawable/email"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/profile_update_button"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/background_light"
                android:text="Profile Update"
                android:background="@drawable/buttons"
                android:layout_below="@id/email_ID"
                android:layout_width="180dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>