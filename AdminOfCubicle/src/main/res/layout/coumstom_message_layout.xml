<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/receiverLayout"
        android:orientation="vertical"
        android:background="@drawable/receiver_style"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10sp"
            android:id="@+id/receiverMessage"
            android:textSize="18dp"
            android:layout_marginLeft="10sp"
            android:textColor="@android:color/black"
            android:text="Receiver message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_below="@id/receiverMessage"
            android:id="@+id/receiverMessageTimeAndDate"
            android:textSize="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="7:07 pm 9 may 2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="10sp"
        android:id="@+id/Sender_layout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:background="@drawable/sender_stayle"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="5sp"
            android:padding="10sp"
            android:layout_marginLeft="10sp"
            android:id="@+id/SenderMessage"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:text="Sender message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/SenderMessage"
            android:id="@+id/SenderMessageTimeAndDate"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginLeft="10sp"
            android:text="7:07 pm 9 may 2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>