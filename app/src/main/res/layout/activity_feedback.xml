<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">
    <include
        android:id="@+id/feedbackToolBar"
        layout="@layout/bar_layout"/>
    <EditText
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:id="@+id/feedbackName"
        android:padding="10sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="10sp"
        android:layout_below="@id/feedbackToolBar"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/feedbackDescription"
        android:padding="10sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/inputs"
        android:layout_marginTop="10sp"
        android:layout_below="@id/feedbackName"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:hint="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button

        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:text="Send"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        android:layout_marginTop="10sp"
        android:layout_below="@id/feedbackDescription"
        android:id="@+id/FeedSendBtn"
        android:layout_width="150sp"
        android:layout_height="wrap_content"/>


</RelativeLayout>